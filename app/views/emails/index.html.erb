<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>受取人</th>
      <th>差出人</th>
      <th>メールタイトル</th>
      <th>メール内容</th>
      <th>メールの送信時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.to %></td>
        <td><%= email.from %></td>
        <td><%= email.subject %></td>
        <td><%= email.body %></td>
        <td><%= email.sent_at %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
